
<div class="inquiry_end_user">

	<div class="inquiry_title">
		<h1 class=''>お問い合わせ内容入力</h1>
	</div>
	<div class="inquiry_form">
		<h4 class="inquiry">お名前とメールアドレスを入力してください</h4>

		<%= form_for(@inquiry) do |inquiry| %>
				<!-- 名前記入欄（ログイン時ユーザー情報取得 -->
				<div class="form_name">
					<%= inquiry.text_field :inquirer_name, :placeholder => 'お名前', :class => 'inquiry_form_name', value: @user.firstname_kanji+@user.lastname_kanji %>
				</div>

				<!-- アドレス記入欄（ログイン時ユーザー情報取得 -->
				<div class="form_mail_box">
					<%= inquiry.email_field :mail, :placeholder => 'メールアドレス', :class => 'inquiry_form_mail inquiry_form_name', value: @user.email %>
				</div>

			<h4 class="inquire">お問い合わせ内容を入力をしてください</h4>
			<!-- 問い合わせ内容記入欄 -->
			<div class="form_content_box">
				<%= inquiry.text_area :inquiry_content, :class => 'inquiry_form_content' %>
			</div>
			<div class="submit_box">
				<input id="submit" type="submit" name="submit" value="投稿する">
			</div>
		<% end %>
	</div>

</div>