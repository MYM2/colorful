<div class="row" style="">

			<%= render 'layouts/list' %>
	<div class="product-list col-lg-10">
		<% if @search_products.present? %>
			<div class="search_title">
					<h1><%= @check %>の検索結果</h1>
			</div>

			<div class ="product-list-contents clearfix">
				<% @search_products.each do |product| %>
				  <div class="product-list-content">
					    <%= link_to(product_path(product)) do %>
					      <%= attachment_image_tag product, :jacket_image, fallback: "no_image.png", class: "product-list-image product-list-image-animation" %>
					    <% end %>
					    <div class="product-list-text">
					      <h4><span class="glyphicon glyphicon-music" aria-hidden="true"></span> <%= link_to product.product_name, product_path(product) %></h4>
					      <br>
					      <span class="glyphicon glyphicon-user" aria-hidden="true"></span><%= link_to product.artist.artist_name, artist_path(product.artist) %>
					      <br>
					      <%= product.genre.genre_name %>
					      <br>
					      <br>
					      税込 <%= (product.price * Colorful::Application.config.InTax).floor.to_s(:delimited)%>円
					    </div>
				  </div>
				<% end %>
			</div>
		<% else %>
			<div class="search_title">
				<h1><%= @check %>は見つかりませんでした</h1>
			</div>
		<% end %>
		<div class="paginate">
			<%= paginate @products, class: "paginate" %>
		</div>
	</div>
</div>