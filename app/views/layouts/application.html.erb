<!DOCTYPE html>
<html>
  <head>
    <title>Colorful</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
  </head>
  <body>
<!-- ここからヘッダーです。 -->
    <nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header navbar-dark bg-dark">

      <!-- 画面幅を狭めた時のメニューボタン -->
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!-- メニューボタンここまで？ -->


      <% if admin_user_signed_in? %>
       <a class="navbar-brand" href="/admin/products" >colorful </a>
      <% else %>
       <a class="navbar-brand" href="/products"  >colorful</a>
      <% end %>

    </div>

    <div class="collapse navbar-collapse" id="navbarEexample">
      <ul class="nav navbar-nav navbar-right">
       <% if end_user_signed_in? %>
        <li>
            <%= link_to 'アーティスト一覧', artists_path %>
          </li>
          <li>
            <a href="/end_users/<%= current_end_user.id %>">マイページ</a>
          </li>
          <li>
            <a href="/rankings">ランキング</a>
          </li>
          <li>
             <%= link_to "カート", cart_path(current_end_user.id) %></li>
          </li>
           <li><%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %></li>
        <% elsif admin_user_signed_in? %>
          <li>
             <%= link_to "管理者メニュー", new_admin_user_session_path %></li>
          <li><%= link_to "ログアウト", destroy_admin_user_session_path, method: :delete %></li>
        <% else %>
          <li>
            <%= link_to 'アーティスト一覧', artists_path %>
          </li>
          <li>
            <a href="/rankings">ランキング</a>
          </li>
          <li>
            <a href="/end_users/sign_up">新規登録</a>
          </li>
          <li>
            <a href="/end_users/sign_in">ログイン</a>
          </li>
        <% end %>

                <!-- ここから検索バーです -->
                <!-- 参考にしたサイト http://bootstrap3.cyberlab.info/components/navbar.html# -->

        <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="検索キーワード">
        </div>
        <button type="submit" class="btn btn-default">検索</button>
        </form>
        　　　　<!-- ここまで検索バーです -->

      </ul>
    </div>
  </div>
</nav>

  <%= yield %>

 

<!-- ここからフッターです。 -->
<footer>
    <% if admin_user_signed_in? %>
    <a class="logo" href="/admin/products">colorful</a>
    <% else %>
    <a class="logo" href="/products">colorful</a>
    <% end %>

    <% if admin_user_signed_in? %>
     <a href="/admin/inquiries">お問い合わせ</a>
    <% else %>
     <a href="/inquiries/new">お問い合わせ</a>
    <% end %>

    <a href="">個人情報保護方針</a>
    <a href="">ご利用にあたって</a>

    <i class="copyright">©2019 colorful.Japan Inc.</i>
</footer>

</body>
</html>
